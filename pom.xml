                                <include>*.java</include>
                                <include>*.kt</include>
                                <include>*.scala</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>-->
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>kevoree-oss</id>
            <url>https://oss.sonatype.org/content/groups/public/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>plugin.kevoree-oss</id>
            <url>https://oss.sonatype.org/content/groups/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>reacloud</id>
            <url>http://maven.reacloud.com/repository/reacloud/release</url>
        </repository>
        <snapshotRepository>
            <id>reacloud</id>
            <url>http://maven.reacloud.com/repository/reacloud/snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <developers>
        <developer>
            <name>Erwan Daubert</name>
            <id>erwan.daubert</id>
            <email>erwan.daubert@gmail.com</email>
            <roles>
                <role>admin</role>
                <role>developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:edaubert/kevoree-komponents.git</connection>
        <developerConnection>scm:git:git@github.com:edaubert/kevoree-komponents.git</developerConnection>
        <url>https://github.com/edaubert/kevoree-komponents</url>
        <tag>HEAD</tag>
    </scm>

